<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".detail.DetailActivity">

    <!-- Foto Salon -->
    <ImageView
        android:id="@+id/ivSalon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding3"
        android:layout_marginBottom="16dp"/>

    <!-- Nama Salon -->
    <TextView
        android:id="@+id/tvNamaSalon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSalon"
        android:layout_marginTop="16dp"
        android:text="Nama Salon"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Rating -->
    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaSalon"
        android:layout_marginTop="8dp"
        android:text="Rating"/>

    <TextView
        android:id="@+id/tvNilaiRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_below="@id/tvNamaSalon"
        android:layout_toEndOf="@id/tvRating"
        android:layout_marginTop="8dp"
        android:text="Nilai" />


    <!-- Button untuk Maps -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvRating"
        android:layout_marginTop="16dp">

        <!-- Button untuk Maps -->
        <Button
            android:id="@+id/btnMaps"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_maps"
            android:layout_height="wrap_content"
            android:text="Lihat di Peta" />

        <!-- Button untuk Telepon -->
        <Button
            android:id="@+id/btnTelepon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_call"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Telepon"/>
    </LinearLayout>




</RelativeLayout>
